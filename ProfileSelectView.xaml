<UserControl x:Class="Playnite.FullscreenApp.Views.ProfileSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:playnite="clr-namespace:Playnite.FullscreenApp.Controls" mc:Ignorable="d"
             d:DesignWidth="1920" d:DesignHeight="1080">

    <Grid>
        <Border Background="{DynamicResource MainBackgroundBrush}" />

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock
                Text="Welcome Back to PlayStation"
                Style="{DynamicResource TextBlockBaseStyle}"
                FontSize="40"
                Margin="0,0,0,50"
            />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <playnite:ButtonEx Margin="30" Background="Transparent" BorderThickness="0" Cursor="Hand" x:Name="Profile1Button"
                                   Command="{Binding SwitchToProfileCommand}"
                                   CommandParameter="themaraudeur"> <StackPanel>
                        <Border CornerRadius="100" Width="150" Height="150" Background="{DynamicResource SubBackgroundBrush}">
                            <Image Source="{ThemeFile 'Images/DefaultProfileIcon.png'}" Stretch="UniformToFill" />
                        </Border>
                        <TextBlock Text="themaraudeur" Style="{DynamicResource TextBlockBaseStyle}" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </StackPanel>
                </playnite:ButtonEx>

                <playnite:ButtonEx Margin="30" Background="Transparent" BorderThickness="0" Cursor="Hand" x:Name="Profile2Button"
                                   Command="{Binding SwitchToProfileCommand}"
                                   CommandParameter="Profile 2"> <StackPanel>
                        <Border CornerRadius="100" Width="150" Height="150" Background="{DynamicResource SubBackgroundBrush}">
                            <Image Source="{ThemeFile 'Images/DefaultProfileIcon.png'}" Stretch="UniformToFill" />
                        </Border>
                        <TextBlock Text="Profile 2" Style="{DynamicResource TextBlockBaseStyle}" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </StackPanel>
                </playnite:ButtonEx>

                <playnite:ButtonEx Margin="30" Background="Transparent" BorderThickness="0" Cursor="Hand" x:Name="AddUserButton"
                                   Command="{Binding NavigateToSettingsCommand}"> <StackPanel>
                        <Border CornerRadius="100" Width="150" Height="150" Background="{DynamicResource SubBackgroundBrush}">
                            <Image Source="{ThemeFile 'Images/DefaultProfileIcon.png'}" Stretch="UniformToFill" />
                        </Border>
                        <TextBlock Text="Add User" Style="{DynamicResource TextBlockBaseStyle}" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </StackPanel>
                </playnite:ButtonEx>

            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>